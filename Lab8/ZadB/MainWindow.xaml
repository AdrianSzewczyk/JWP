        <TextBox x:Name="txtImie" HorizontalAlignment="Left" Height="22" Margin="104,222,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="txtNazwisko" HorizontalAlignment="Left" Height="22" Margin="104,249,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="txtOcena" HorizontalAlignment="Left" Height="22" Margin="104,276,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="207"/>
        <Button x:Name="btnUsuń" Content="Usuń" HorizontalAlignment="Left" Height="38" Margin="93,352,0,0" VerticalAlignment="Top" Width="93"/>

    </Grid>
</Window>
